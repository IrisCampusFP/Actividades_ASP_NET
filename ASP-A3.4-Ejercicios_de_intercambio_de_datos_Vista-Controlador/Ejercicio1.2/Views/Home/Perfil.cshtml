@model Ejercicio1._2.Models.PerfilViewModel

<div class="text-center">
    <h1 class="display-4">@ViewBag.TituloPagina</h1>

    @if (Model.EsAdmin)
    {
        <p>@Model.Nombre, eres <strong>administrador</strong>.</p>
    }
    else
    {
        <p>@Model.Nombre, eres un <strong>usuario estándar</strong> (no tienes privilegios de administrador).</p>
    }

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>